<h1>Categories Show/Post Index</h1>

<%= form_tag(posts_path, method: :get) do %>
  <%= text_field_tag :search, params[:search] %>
  <%= text_field_tag :zip_code, params[:zip_code] %>
  <%= text_field_tag :distance, params[:distance] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<% @posts.each do |post| %>
	<ul>
		<li><%= image_tag post.image.url(:thumb) %></li>
		<li><%= link_to post.title, post_path(post) %>, <%=post.price %> </li>
		<p><%= post.description%></p>
		<% post.tags.each do |tag| %>
			<span><%= tag.name %></span>
		<% end %>
	</ul>
<% end %>


