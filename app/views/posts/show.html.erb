<h1>Post Show</h1>

<div>
	<p>Title: <%= @post.title %></p>

	<%= image_tag @post.image.url(:medium) %>

	<p>Description: <%= @post.description %></p>

	<p>Price: <%= @post.price %></p>

	<p>Status: <%= @post.status %></p>

	<% if @post.negotiable %>
		<p>Negotiable?: yes</p>
	<% else %>
		<p>Negotiable?: no</p>
	<% end %>

	<p>Author: <%= link_to @post.loaner.name.capitalize, user_path(@post.loaner) %></p>

	<% if @post.loaner == current_user %>
		<p>Tags:</p>
		<% @post.tags.each do |tag| %>
			<span><%= link_to "x", post_tag_path(tag, post_id: @post.id), method: "DELETE" %><%= tag.name %></span>
		<% end %>
	<% else%>
		<p>Tags:</p>
		<% @post.tags.each do |tag| %>
			<span><%= tag.name %></span>
		<% end %>
	<% end %>

</div>

<% if @post.loaner == current_user %>
	<div>
		<p>Add Tags To Your Post</p>

		<%= form_for @tag, as: :tag, url: tags_path, html: {id: "tag_form" } do |f| %>
			<div>
				<%= f.label "Tag Name" %>
				<%= f.text_field :name %>
				<%= f.hidden_field :post_id, value: @post.id %>
			</div>
		  		<%= f.submit "Create" %>
		<% end %>
	</div>
	<div>
		<p><%= link_to "Edit Post", edit_post_path(@post)%></p>
		<p><%= link_to "Delete Post", post_path(@post), method: "DELETE"%></p>
	</div>
<% end %>

<%= form_for @transaction, url: transactions_path do |f| %>
	<div>
		<%= f.label "Make an Offer" %>
		<%= f.hidden_field :borrower, :value=> current_user.id %>
		<%= f.hidden_field :post, :value=> @post.id %>
		<%= f.text_field :duration %>
		<%= f.text_field :final_price %>
	</div>
		<%= f.submit "Borrow" %>
<% end %>










