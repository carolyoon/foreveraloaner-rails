<h1>Meet <%= @user.user_name %></h1>
<p>Average rating: <%= @user.average_rating %></p>
<p>A little bit about me:</p>
<p> <%= @user.bio %></p>
<h3>Things you can borrow from <%= @user.user_name %>:</h3>
<ul>
  <% @user.posts.each do |post| %>
    <% if post.status == "open" %>
      <li><%= link_to post.title, post_path(post) %></li>
    <% end %>
  <% end %>
</ul>

<h3><%= @user.user_name %> as a loaner</h3>
<p>Leave a review for <%=@user.user_name.capitalize%> as a loaner</p>
<%= form_for([current_user, @review]) do |form| %>
  <%= form.hidden_field :reviewer_id, :value=> current_user.id %>
  <%= form.hidden_field :role, :value=> "borrower" %>
  <%= form.hidden_field :reviewee_id, :value=> @user.id %>

  <%= form.label :rating %>
  <%= form.select :rating, [1, 2, 3, 4, 5] %><br>

  <%= form.label :body %>
  <%= form.text_area :body %><br>

  <%= form.submit %>
<% end %>

  <ul>
    <% @user.received_loaner_reviews.each do |review| %>
      <li><%= review.rating %></li>
        <%= review.body %>
    <% end %>
  </ul>

<h3><%= @user.user_name %> as a borrower</h3>
<p>Leave a review for <%=@user.user_name.capitalize%> as a borrower</p>
<%= form_for([current_user, @review]) do |form| %>
  <%= form.hidden_field :reviewer_id, :value=> current_user.id %>
  <%= form.hidden_field :role, :value=> "loaner" %>
  <%= form.hidden_field :reviewee_id, :value=> @user.id %>

  <%= form.label :rating %>
  <%= form.select :rating, [1, 2, 3, 4, 5] %><br>

  <%= form.label :body %>
  <%= form.text_area :body %><br>

  <%= form.submit %>
<% end %>
  <ul>
    <% @user.received_borrower_reviews.each do |review| %>
      <li><%= review.rating %></li>
        <%= review.body %>
    <% end %>
  </ul>

<% if @user != current_user %>
  <h1>New Conversation With <%= @user.user_name %></h1>

  <%= form_tag conversations_path, method: :post do %>
    <div>
      <%= text_field_tag :user_name, nil, value: @user.user_name %>
    </div>

    <div>
      <%= text_field_tag :subject, nil, placeholder: "subject" %>
    </div>

    <div>
      <%= text_area_tag :body, nil, placeholder: "message" %>
    </div>

    <%= submit_tag %>

  <% end %>
<% end %>
